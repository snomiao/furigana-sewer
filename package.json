    "release": "bunx standard-version && git push --follow-tags && bun publish",
    "test": "bun test"
  },
  "devDependencies": {
    "@types/bun": "^1.2.22",
    "@types/jest": "^30.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  },
  "type": "module",
  "exports": {
    "import": "./dist/index.js",
    "types": "./index.ts"
  },
  "module": "dist/index.js",
  "types": "./index.ts"
}
